<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="60dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="发现新版本"
            android:textColor="@color/black"
            android:textSize="@dimen/textFontSize_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:lineSpacingMultiplier="1.5"
            android:text="当前 【版本1.0.1】，是否希望升级到最新的【版本1.3.2】体验最新的功能？"
            android:textColor="@color/black"
            android:textSize="@dimen/textFontSize_14" />

        <TextView
            android:id="@+id/tv_subContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:lineSpacingMultiplier="1.5"
            android:text="客服微信号：jietiaoguanjia2018"
            android:textColor="@color/black"
            android:textSize="@dimen/textFontSize_14"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_left"
            android:gravity="center"
            android:text="以后再说"
            android:textColor="#FF666666"
            android:textSize="@dimen/textFontSize_16"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/uikit_selector_alertdialog_right"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#FF287CFA"
            android:textSize="@dimen/textFontSize_16"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>