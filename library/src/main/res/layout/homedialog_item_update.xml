<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/textFontSize_24"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/black"
                android:textSize="@dimen/textFontSize_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_subContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="35dp"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@color/black"
                android:textSize="@dimen/textFontSize_14"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="35dp"
            android:background="@color/iosAlertDialog_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/uikit_selector_alertdialog_left"
                android:gravity="center"
                android:text="@string/homedialog_remainder_next"
                android:textColor="#FF666666"
                android:textSize="@dimen/textFontSize_16"
                android:visibility="gone" />

            <View
                android:id="@+id/view_line"
                android:layout_width="1px"
                android:layout_height="52dp"
                android:background="@color/iosAlertDialog_line"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="@drawable/uikit_selector_alertdialog_right"
                android:gravity="center"
                android:text="@string/homedialog_update"
                android:textColor="#FF287CFA"
                android:textSize="@dimen/textFontSize_16"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>