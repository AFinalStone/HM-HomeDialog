<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_friend_content"
        android:layout_width="280dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我有闲置资金，发布了一条出借信息，寻找诚信的借款人"
            android:textColor="@color/uikit_text_main_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_dialog_amount"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_title"
            android:textColor="@color/uikit_text_sub_content"
            android:layout_marginTop="20dp"
            tools:text="出借金额：￥10000" />

        <TextView
            android:id="@+id/tv_dialog_days"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_amount"
            android:layout_marginTop="10dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="出借期限：30天" />

        <TextView
            android:id="@+id/tv_dialog_interest"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_days"
            android:layout_marginTop="10dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="合计利息：￥100 " />

        <TextView
            android:id="@+id/tv_dialog_overdue_interest"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_interest"
            android:layout_marginTop="10dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="逾期利息：未还金额的万6" />

        <Button
            android:id="@+id/btn_dialog_submit"
            style="@style/UikitHMButton.Large.Main"
            android:layout_height="40dp"
            android:layout_width="130dp"
            android:layout_below="@id/tv_dialog_overdue_interest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="查看详情" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_friend_close"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_below="@id/rl_friend_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/uikit_ic_close_white" />

</RelativeLayout>