<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_friend_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingBottom="40dp"
        >

        <com.hm.iou.uikit.CircleImageView
            android:id="@+id/iv_dialog_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/uikit_icon_header_unknow" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_dialog_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="我有“闲置”资金"
            android:textColor="#FF1A6B20"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_dialog_nickname"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_title"
            android:layout_marginTop="18dp"
            android:textColor="@color/uikit_text_sub_content"
            android:singleLine="true"
            android:maxLines="1"
            tools:text="金主昵称：貂蝉" />

        <TextView
            android:id="@+id/tv_dialog_amount"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_nickname"
            android:layout_marginTop="8dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="闲置资金：￥10000" />

        <TextView
            android:id="@+id/tv_dialog_days"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_amount"
            android:layout_marginTop="8dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="借款周期：30天" />

        <TextView
            android:id="@+id/tv_dialog_interest"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_days"
            android:layout_marginTop="8dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="利息合计：￥100 " />

        <TextView
            android:id="@+id/tv_dialog_overdue_interest"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_dialog_interest"
            android:layout_marginTop="8dp"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="逾期利息：未还金额的万6" />

        <Button
            android:id="@+id/btn_dialog_submit"
            style="@style/UikitHMButton.Large"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/tv_dialog_overdue_interest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/homedialog_btn_borrow_code"
            android:text="查看详情"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_friend_close"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_below="@id/rl_friend_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/uikit_ic_close_white" />

</RelativeLayout>